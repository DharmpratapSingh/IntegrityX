{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "eqeqeq": "warn",
    "curly": "warn",
    "no-unused-vars": "warn",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "jsx-a11y/accessible-emoji": "warn",
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "import/no-unresolved": "error",
    "react/no-unescaped-entities": "warn",
    "no-warning-comments": [
      "warn",
      {
        "terms": [
          "todo",
          "fixme",
          "commented-out"
        ],
        "location": "start"
      }
    ]
  }
}