# IntegrityX Environment Configuration Template
# Copy this file to .env and fill in your actual values

# DATABASE (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/integrityx_db

# WALACOR BLOCKCHAIN
WALACOR_API_KEY=your_walacor_api_key_here
WALACOR_API_SECRET=your_walacor_api_secret_here

# ENCRYPTION
ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here

# CLERK AUTHENTICATION
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# REDIS (Optional - for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379

# APPLICATION
DEMO_MODE=false
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# See README.md for detailed configuration instructions
